<config>
  <modules>
    <Wsu_MailingServices>
      <version>1.4.3</version>
    </Wsu_MailingServices>
  </modules>
  <frontend>
    <routers>
      <mailingservices>
        <use>standard</use>
        <args>
          <module>Wsu_MailingServices</module>
          <frontName>mailingservices</frontName>
        </args>
      </mailingservices>
    </routers>
  </frontend>
  <global>
    <helpers>
      <mailingservices>
        <class>Wsu_MailingServices_Helper</class>
      </mailingservices>
    </helpers>
    <blocks>
      <mailingservices>
        <class>Wsu_MailingServices_Block</class>
      </mailingservices>
    </blocks>
    <models>
      <mailingservices>
        <class>Wsu_MailingServices_Model</class>
        <resourceModel>mailingservices_mysql4</resourceModel>
      </mailingservices>
      <mailingservices_mysql4>
        <class>Wsu_MailingServices_Model_Mysql4</class>
        <entities>
          <email_log>
            <table>mailingservices_email_log</table>
          </email_log>
        </entities>
      </mailingservices_mysql4>
      <newsletter>
        <rewrite>
          <template>Wsu_MailingServices_Model_Newsletter_Template</template>
        </rewrite>
      </newsletter>
      <core>
        <rewrite>
          <email>Wsu_MailingServices_Model_Email</email>
          <email_template>Wsu_MailingServices_Model_Email_Template</email_template>
        </rewrite>
      </core>
    </models>
    <resources>
      <mailingservices_setup>
        <setup>
          <module>Wsu_MailingServices</module>
          <class>Wsu_MailingServices_Model_Mysql4_Setup</class>
        </setup>
        <connection>
          <use>core_setup</use>
        </connection>
      </mailingservices_setup>
      <mailingservices_write>
        <connection>
          <use>core_write</use>
        </connection>
      </mailingservices_write>
      <mailingservices_read>
        <connection>
          <use>core_read</use>
        </connection>
      </mailingservices_read>
    </resources>
    <events>
      <mailingservices_email_after_send>
        <observers>
          <mailingservices_email_after_send_observer>
            <type>singleton</type>
            <class>mailingservices/observer</class>
            <method>log</method>
          </mailingservices_email_after_send_observer>
        </observers>
      </mailingservices_email_after_send>
    </events>
  </global>
  <adminhtml>
    <menu>
      <system>
        <children>
          <tools>
            <children>
              <mailingservices translate="title" module="mailingservices">
                <title>Email Log</title>
                <action>mailingservices/log</action>
              </mailingservices>
            </children>
          </tools>
        </children>
      </system>
    </menu>
    <acl>
      <resources>
        <admin>
          <children>
            <system>
              <children>
                <config>
                  <children>
                    <mailingservices>
                      <title>SMTP Settings</title>
                    </mailingservices>
                    <mailingservices translate="title" module="mailingservices">
                      <title>Review Reminder</title>
                      <sort_order>110</sort_order>
                    </mailingservices>
                  </children>
                </config>
              </children>
            </system>
          </children>
        </admin>
      </resources>
    </acl>
    <translate>
      <modules>
        <Wsu_MailingServices>
          <files>
            <default>Wsu_MailingServices.csv</default>
          </files>
        </Wsu_MailingServices>
      </modules>
    </translate>
  </adminhtml>
  <default>
    <mailingservices>
      <settings>
        <enabled>0</enabled>
        <store_addresses>0</store_addresses>
        <username></username>
        <password></password>
      </settings>
    </mailingservices>
  </default>
  <crontab>
    <jobs>
      <reviewreminder_mail_send>
        <schedule>
          <cron_expr>* * * * *</cron_expr>
        </schedule>
        <run>
          <model>mailingservices/reviewreminder::sendReviewLinkEmail</model>
        </run>
      </reviewreminder_mail_send>
    </jobs>
  </crontab>
</config>
