    <jobs>
      <reviewreminder_mail_send>
        <schedule>
          <cron_expr>* * * * *</cron_expr>
        </schedule>
        <run>
          <model>wsu_mailingservices/reviewreminder::sendReviewLinkEmail</model>
        </run>
      </reviewreminder_mail_send>
    </jobs>
  </crontab>-->
</config>
